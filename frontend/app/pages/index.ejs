<section class="section">
  <h1>Lorem ipsum dolor.</h1>
  <div>
    Обычная кнопка:
    <%- require("../components/button/template.ejs")() %>
  </div>

  <div>
    Обычная кнопка:
    <%- require("../components/button/template.ejs")({
      extraClasses: [
        "button--transparent"
      ],
      icon: "arrow-right"
    }) %>
  </div>

  <div>
    Кнопка с иконкой:
    <%- require("../components/button/template.ejs")({
      icon: "icon-eye"
